{
  "name": "playground-macos",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "craco start",
    "build": "craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "lint-fix": "eslint --fix --ext .js ./",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,scss}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix --ext .js ./"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "trailingComma": "none"
        }
      ]
    },
    "ignorePatterns": [
      "node_modules/",
      "build/"
    ]
  },
  "dependencies": {
    "@craco/craco": "^7.0.0",
    "@rooks/use-raf": "^4.11.2",
    "date-fns": "2.29.3",
    "framer-motion": "^7.6.5",
    "nightwind": "^1.1.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.8.0",
    "react-markdown": "^8.0.7",
    "react-rangeslider": "2.2.0",
    "react-redux": "^8.1.0",
    "react-rnd": "^10.3.8",
    "react-scripts": "5.0.1",
    "react-syntax-highlighter": "^15.5.0",
    "react-webcam": "5.2.3",
    "redux": "^4.2.1",
    "remark-gfm": "^3.0.1",
    "web-vitals": "^3.3.1",
    "i18next": "^22.0.0",
    "react-i18next": "^12.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.21",
    "sort-package-json": "^1.52.0",
    "tailwindcss": "^3.3.2",
    "typescript": "5.0.4",
    "@babel/core": "^7.21.3",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-react": "^7.18.6",
    "babel-jest": "^29.7.0"
  }
}
